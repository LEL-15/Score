<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scores" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_dice"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_dice"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditGameActivity" />
        <activity android:name=".AddPlayerActivity" />
        <activity android:name=".NewGameActivity" />
        <activity android:name=".DisplayGamesActivity" />
        <activity android:name=".UserActivity" />
        <activity android:name=".NewUserActivity" />
        <activity android:name=".AddRowActivity" />
        <activity android:name=".EditTableGameActivity" />
    </application>

</manifest>